[gd_resource type="ShaderMaterial" load_steps=2 format=3]
shader = SubResource(1)

[sub_resource type="Shader" id=1]
shader_type spatial;
uniform vec4 road_color : hint_color = vec4(0.12,0.12,0.12,1.0);
uniform vec4 line_color : hint_color = vec4(1.0,1.0,1.0,1.0);
uniform float line_width = 0.06;

void fragment() {
    vec2 uv = UV;
    vec3 base = road_color.rgb;
    // center dashed line along +Z direction
    float stripe = step(abs(uv.x - 0.5), line_width);
    float dash = step(mod(uv.y * 4.0, 1.0), 0.5);
    vec3 col = mix(base, line_color.rgb, stripe * dash);
    ALBEDO = col;
    ROUGHNESS = 0.9;
}